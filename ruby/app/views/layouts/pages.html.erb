<!DOCTYPE html>
<html>
<head>

<title><%= full_title(yield(:title)) %></title>

<%= stylesheet_link_tag 'application', media: 'all','data-turbolinks-track' => true %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>

</head>
<body>

<nav class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to('Wenti.de', home_path, class:'navbar-brand') %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li <% if yield(:title) == 'Home' %>class='active'<% end %> ><%= link_to('Home', home_path) %></li>
        <li <% if yield(:title) == 'Search' %>class='active'<% end %> ><%= link_to('Search', search_path) %></li>
        <li <% if yield(:title) == 'Contact' %>class='active'<% end %> ><%= link_to('Contact', contact_path) %></li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>

<%= yield %>

<nav class="navbar navbar-inverse navbar-static-top footer">
  <div class="container">
    <ul class="nav navbar-nav">
      <li><%= link_to('Terms of Service', legal_path) %></li>
      <li><%= link_to('Privacy Policy', privacy_path) %></li>
      <li>Copyright 2016</li>
    </ul>
  </div>
</nav>

<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-51881581-1', 'auto');
  ga('send', 'pageview');
</script>

</body>
</html>
